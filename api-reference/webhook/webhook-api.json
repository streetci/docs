{
  "openapi": "3.0.1",
  "info": {
    "title": "Webhook API",
    "description": "API for managing webhooks",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.yourdomain.com/v1",
      "description": "Production server"
    }
  ],
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "paths": {
    "/webhooks": {
      "get": {
        "summary": "List Webhooks",
        "description": "Retrieve a list of webhooks",
        "responses": {
          "200": {
            "description": "A list of webhooks",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer",
                        "example": 1
                      },
                      "url": {
                        "type": "string",
                        "example": "https://example.com/webhook"
                      },
                      "event": {
                        "type": "string",
                        "example": "user.created"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create Webhook",
        "description": "Create a new webhook",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string",
                    "example": "https://example.com/webhook"
                  },
                  "event": {
                    "type": "string",
                    "example": "user.created"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Webhook created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 1
                    },
                    "url": {
                      "type": "string",
                      "example": "https://example.com/webhook"
                    },
                    "event": {
                      "type": "string",
                      "example": "user.created"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/webhooks/{webhookId}": {
      "get": {
        "summary": "Get Webhook",
        "description": "Retrieve a specific webhook by ID",
        "parameters": [
          {
            "in": "path",
            "name": "webhookId",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Webhook details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 1
                    },
                    "url": {
                      "type": "string",
                      "example": "https://example.com/webhook"
                    },
                    "event": {
                      "type": "string",
                      "example": "user.created"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update Webhook",
        "description": "Update an existing webhook by ID",
        "parameters": [
          {
            "in": "path",
            "name": "webhookId",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string",
                    "example": "https://example.com/webhook"
                  },
                  "event": {
                    "type": "string",
                    "example": "user.updated"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Webhook updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 1
                    },
                    "url": {
                      "type": "string",
                      "example": "https://example.com/webhook"
                    },
                    "event": {
                      "type": "string",
                      "example": "user.updated"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete Webhook",
        "description": "Delete a webhook by ID",
        "parameters": [
          {
            "in": "path",
            "name": "webhookId",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Webhook deleted"
          }
        }
      }
    }
  }
}
