{
  "openapi": "3.0.0",
  "info": {
    "title": "Webhook API",
    "description": "API for managing webhooks",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.street.ci/ecommerce",
      "description": "Production server"
    },
    {
      "url": "https://devapi.street.ci/ecommerce",
      "description": "Test server"
    }
  ],
  "paths": {
    "/webhooks": {
      "get": {
        "summary": "List Webhooks",
        "description": "Retrieve a list of webhooks",
        "responses": {
          "200": {
            "description": "A list of webhooks",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WebhookResponse"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create Webhook",
        "description": "Provide a single callback URL where notifications for all events will be sent",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WebhookRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Webhook created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebhookResponse"
                }
              }
            }
          }
        }
      }
    },
    "/webhooks/{webhookId}": {
      "get": {
        "summary": "Get webhook",
        "description": "Retrieve a specific webhook by ID",
        "parameters": [
          {
            "in": "path",
            "name": "webhookId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Webhook details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebhookResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update Webhook",
        "description": "Update an existing webhook by ID",
        "parameters": [
          {
            "in": "path",
            "name": "webhookId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WebhookRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Webhook updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebhookResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete Webhook",
        "description": "Delete a webhook by ID",
        "parameters": [
          {
            "in": "path",
            "name": "webhookId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Webhook deleted"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "WebhookRequest": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "Fully qualified url of the webhook endpoint",
            "example": "https://website.com/my_webhook_target"
          },
          "active": {
            "type": "boolean",
            "description": "Indicates if the webhook is active",
            "example": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The creation timestamp of the webhook",
            "example": "2020-10-15T12:09:49.355Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "The last update timestamp of the webhook",
            "example": "2020-10-15T12:09:49.355Z"
          }
        },
        "required": [
          "url",
          "active",
          "createdAt",
          "updatedAt"
        ]
      },
      "WebhookResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The unique identifier of the webhook",
            "example": "5f8f8c44b54764421b7156e6"
          },
          "url": {
            "type": "string",
            "description": "Fully qualified url of the webhook endpoint",
            "example": "https://website.com/my_webhook_target"
          },
          "active": {
            "type": "boolean",
            "description": "Indicates if the webhook is active",
            "example": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The creation timestamp of the webhook",
            "example": "2020-10-15T12:09:49.355Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "The last update timestamp of the webhook",
            "example": "2020-10-15T12:09:49.355Z"
          }
        },
        "required": [
          "id",
          "url",
          "active",
          "createdAt",
          "updatedAt"
        ]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}
