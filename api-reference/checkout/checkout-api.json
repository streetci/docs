{
  "openapi": "3.0.0",
  "info": {
    "title": "Street Delivery Order API",
    "description": "API for managing delivery orders",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.street.ci/ecommerce",
      "description": "Production server"
    },
    {
      "url": "https://devapi.street.ci/ecommerce",
      "description": "Test server"
    }
  ],
  "paths": {
    "/checkout": {
      "post": {
        "summary": "Get Delivery Fees",
        "description": "Get Delivery Fees",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CheckoutRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Delivery fee",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CheckoutResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CheckoutRequest": {
        "type": "object",
        "properties": {
          "deliveryAddress": {
            "type": "object",
            "properties": {
              "latitude": {
                "type": "number",
                "format": "float",
                "description": "Latitude of the delivery address",
                "example": 5.4054499
              },
              "longitude": {
                "type": "number",
                "format": "float",
                "description": "Longitude of the delivery address",
                "example": -3.9947895
              },
              "city": {
                "type": "string",
                "description": "City of the delivery address",
                "example": "Cocody"
              }
            },
            "required": ["city"]
          },
          "items": {
            "type": "array",
            "description": "List of items in the delivery order",
            "items": {
              "type": "object",
              "properties": {
                "size": {
                  "type": "string",
                  "description": "Size of the item. Available options: `S`, `M`, `L`, `XL`, `XXL`.",
                  "example": "S"
                },
                "pickupAddress": {
                  "type": "object",
                  "properties": {
                    "placeId": {
                      "type": "string",
                      "description": "Place ID of the pickup address. This is a custom field that you can fill with any reference that identifies the pickup address in your system. It can be the ID of the warehouse or the store where the parcel is to be picked up. You can also use the **place_id** corresponding to the latlng (latitude, longitude) of the pickup address - See [Google Geocoding API](https://developers.google.com/maps/documentation/geocoding/requests-reverse-geocoding)",
                      "example": "ChIJj25rEpmUwQ8ROH4YrabOvdc"
                    },
                    "latitude": {
                      "type": "number",
                      "format": "float",
                      "description": "Latitude of the pickup address",
                      "example": 5.4054499
                    },
                    "longitude": {
                      "type": "number",
                      "format": "float",
                      "description": "Longitude of the pickup address",
                      "example": -3.9947895
                    },
                    "city": {
                      "type": "string",
                      "description": "City of the pickup address",
                      "example": "Cocody"
                    }
                  },
                  "required": ["placeId", "latitude", "longitude", "city"]
                }
              },
              "required": ["size", "pickupAddress"]
            }
          }
        },
        "required": ["deliveryAddress", "items"]
      },
      "CheckoutResponse": {
        "type": "object",
        "properties": {
          "deliveryFee": {
            "type": "number",
            "format": "float",
            "description": "Fee for the delivery service",
            "example": 2000
          },
          "deliveryAddress": {
            "type": "object",
            "properties": {
              "latitude": {
                "type": "number",
                "format": "float",
                "description": "Latitude of the delivery address",
                "example": 5.4054499
              },
              "longitude": {
                "type": "number",
                "format": "float",
                "description": "Longitude of the delivery address",
                "example": -3.9947895
              },
              "city": {
                "type": "string",
                "description": "City of the delivery address",
                "example": "Cocody"
              }
            },
            "required": ["city"]
          },
          "items": {
            "type": "array",
            "description": "List of items in the delivery order",
            "items": {
              "type": "object",
              "properties": {
                "size": {
                  "type": "string",
                  "description": "Size of the item. Available options: `S`, `M`, `L`, `XL`, `XXL`.",
                  "example": "S"
                },
                "pickupAddress": {
                  "type": "object",
                  "properties": {
                    "placeId": {
                      "type": "string",
                      "description": "Place ID of the pickup address. This is a custom field that you can fill with any reference that identifies the pickup address in your system. It can be the ID of the warehouse or the store where the parcel is to be picked up. You can also use the **place_id** corresponding to the latlng (latitude, longitude) of the pickup address - See [Google Geocoding API](https://developers.google.com/maps/documentation/geocoding/requests-reverse-geocoding)",
                      "example": "ChIJj25rEpmUwQ8ROH4YrabOvdc"
                    },
                    "latitude": {
                      "type": "number",
                      "format": "float",
                      "description": "Latitude of the pickup address",
                      "example": 5.4054499
                    },
                    "longitude": {
                      "type": "number",
                      "format": "float",
                      "description": "Longitude of the pickup address",
                      "example": -3.9947895
                    },
                    "city": {
                      "type": "string",
                      "description": "City of the pickup address",
                      "example": "Cocody"
                    }
                  },
                  "required": ["placeId", "latitude", "longitude", "city"]
                }
              },
              "required": ["size", "pickupAddress"]
            }
          }
        },
        "required": ["deliveryFee", "deliveryAddress", "items"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}
